% 
% For printing a sequence of references:
\newif\ifsecondorlateritem

\def\endtoken{\end}

\def\processrefs#1,{%
	\def\thisitem{#1}%
	\ifx\thisitem\endtoken%
		\let\next=\relax%
	\else%
		\ifsecondorlateritem%
			,\ %
		\fi
		\secondorlateritemtrue%
		\refformat{\ref{\gobblespaces#1}}%
		\let\next=\processrefs%
	\fi
	\next
}

\def\gobblespaces#1{\if#1 {}\else#1\fi}


